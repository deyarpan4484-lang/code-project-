#include <stdio.h>
struct Student {
    int id;
    char name[50];
    int marks[5]; 
};

int main() {
    struct Student s;
    int i;
    int total = 0;

    printf("Enter student ID: ");
    scanf("%d", &s.id);
    printf("Enter name: ");
    scanf("%s", s.name);

    printf("Enter marks of 5 subjects:\n");
    for(i = 0; i < 5; i++) {
        scanf("%d", &s.marks[i]);
        total += s.marks[i];
    }

    printf("\nStudent Details:\n");
    printf("ID: %d\n", s.id);
    printf("Name: %s\n", s.name);
    printf("Marks: ");
    for(i = 0; i < 5; i++) {
        printf("%d ", s.marks[i]);
    }
    printf("\nTotal Marks: %d\n", total);

    return 0;
}
